{
  "name": "php-code-style",
  "version": "1.0.0",
  "description": "PHP Code Styles",
  "dependencies": {},
  "devDependencies": {
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stickeeuk/php-code-style.git"
  },
  "author": "Rehan Aslam & Paul Tibbetts",
  "bugs": {
    "url": "https://github.com/stickeeuk/php-code-style/issues"
  },
  "homepage": "https://github.com/stickeeuk/php-code-style#readme",
  "lint-staged": {
    "*.php": [
      "php ./vendor/bin/php-cs-fixer fix --config dist/.php_cs",
      "php ./vendor/bin/phpstan analyse -c dist/phpstan.neon",
      "git add"
    ],
    "composer.json": [
      "composer validate",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
